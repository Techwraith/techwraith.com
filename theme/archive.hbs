<ul class="essays-list">
  {{#essays}}
    {{#if essays}}
    <li class="category-title"><h3>{{categoryTitle}}</h3>
      <ul>
        {{#essays}}
        <li>
          <a href="/{{slug}}/">{{title}}</a>
        </li>
        {{/essays}}
      </ul>
    </li>
    {{else}}
    <li>
      <a href="/{{slug}}/">{{title}}</a>
    </li>
    {{/if}}
  {{/essays}}
</ul>